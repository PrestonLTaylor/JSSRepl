<section class="output-console">
    @foreach (var Item in Items)
    {
        <pre class="output-item @(Item.IsError ? "text-danger" : "")">@Item.Value</pre>
    }

    @if (Items.Count == 0)
    {
        <pre class="output-placeholder">Output goes here...</pre>
    }
</section>

@code {
    [Parameter]
    public IReadOnlyList<ConsoleItem> Items { get; set; } = [];
}
